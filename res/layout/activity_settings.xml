<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings" >

    <TextView
        android:id="@+id/textAnimationFps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/grass_animation_fps"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/animationFps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAnimationFps"
        android:layout_centerHorizontal="true"
        android:prompt="@string/grass_animation_fps" />

    <TextView
        android:id="@+id/textAnimationTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animationFps"
        android:text="@string/grass_animation_time"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/animationTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textAnimationTime"
        android:layout_below="@+id/textAnimationTime"
        android:prompt="@string/grass_animation_time"/>
    
	<Button
	    android:id="@+id/btnGenerate"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/animationTime"
	    android:layout_alignParentLeft="true"
	    android:text="@string/generate" />
    
	<TextView
	    android:id="@+id/textAbout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_below="@+id/btnGenerate"
	    android:gravity="top|left"
	    android:text="@string/about_html"
	    android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>